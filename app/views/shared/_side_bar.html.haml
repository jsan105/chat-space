.side-bar
  .header
    .header__box
      %h3.header__box__name
        = current_user.name
      %ul.header__box__menu
        %li.header__box__menu__new-group
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message
            